{
  "name": "claude-flow-guidance-implementation",
  "version": "3.0.0-alpha.1.wrapper.1",
  "description": "Implementation kit for wiring @claude-flow/guidance into Claude Code and Codex repos with hook automation",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "Sparkling Ideas <henrik@sparklingideas.co.uk>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparkling/claude-flow-guidance-implementation.git"
  },
  "homepage": "https://sparklingideas.co.uk/guidance/claude-flow",
  "bugs": {
    "url": "https://github.com/sparkling/claude-flow-guidance-implementation/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./src/installer.mjs"
    },
    "./installer": {
      "import": "./src/installer.mjs"
    },
    "./settings": {
      "import": "./src/default-settings.mjs"
    },
    "./runtime": {
      "import": "./src/guidance/advanced-runtime.js"
    },
    "./phase1": {
      "import": "./src/guidance/phase1-runtime.js"
    },
    "./executor": {
      "import": "./src/guidance/content-aware-executor.js"
    },
    "./hook-handler": {
      "import": "./src/hook-handler.cjs",
      "require": "./src/hook-handler.cjs"
    }
  },
  "files": [
    "bin",
    "src",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "cf-guidance-impl": "bin/cf-guidance-impl.mjs",
    "cf-guidance": "src/cli/guidance-integrations.js",
    "cf-guidance-runtime": "src/cli/guidance-runtime.js",
    "cf-guidance-autopilot": "src/cli/guidance-autopilot.js",
    "cf-guidance-benchmark": "src/cli/guidance-ab-benchmark.js",
    "cf-guidance-codex": "src/cli/guidance-codex-bridge.js",
    "cf-guidance-analyze": "src/cli/analyze-guidance.js",
    "cf-guidance-scaffold": "src/cli/scaffold-guidance.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "node ./bin/cf-guidance-impl.mjs verify --target .",
    "swarm:init": "npx @claude-flow/cli@latest swarm init --topology hierarchical --max-agents 8 --strategy specialized",
    "swarm:route": "npx @claude-flow/cli@latest hooks route --task \"implement reusable guidance integration kit\""
  },
  "dependencies": {
    "@claude-flow/guidance": "^3.0.0-alpha.1",
    "@claude-flow/hooks": "^3.0.0-alpha.7"
  },
  "keywords": [
    "claude-flow",
    "guidance",
    "agentic",
    "claude-md",
    "codex",
    "control-plane",
    "hook-handler",
    "hooks",
    "claude-code",
    "automation",
    "autopilot"
  ],
  "packageManager": "npm@10",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18"
  }
}
